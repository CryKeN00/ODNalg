    int lenght = 1000; //Длина массива чисел
    int max = 0; //Максимальное число
    int krat14 = 0; //Число кратное 14
    int krat7 = 0; //Число кратное 7
    int krat2 = 0; //Число кратное 2
    Random random = new Random(); //Объект random для генерации случайных чисел
    int[] value = new int[lenght]; //Массив ранодмных чисел с длинной 1000
    for (int i = 0; i < lenght; i++) //Перебор элементов массива
    {
        value[i] = random.Next(0,5001); //Заполняем массив рандомными числами от 1 до 5000
    }
    for (int i = 0; i < lenght; i++) //Перебор элементов массива и выполнение операций над ними
    {
        if (value[i] > max) //Проверка больше ли элемент массива чем максимальное число
        {
            max = value[i]; //Задаем переменной max значение текущего элемента массива
        }
        if (value[i] > krat14 & value[i] % 14 == 0) //Проверка больше ли элемент значения переменной krat14 и делится ли он на 14
        {
            krat14 = value[i];//Задаем переменной krat14 значение текущего элемента массива
        }
        if (value[i] > krat7 & value[i] % 7 == 0) //Проверка больше ли элемент значения переменной krat7 и делится ли он на 7
        {
            krat7 = value[i];//Задаем переменной krat7 значение текущего элемента массива
        }
        if (value[i] > krat2 & value[i] % 2 == 0) //Проверка больше ли элемент значения переменной krat2 и делится ли он на 2
        {
            krat2 = value[i];//Задаем переменной krat2 значение текущего элемента массива
        }
    }
    int proizv1 = max * krat14; //Поиск произведения в первом случае
    int proizv2 = krat7 * krat2; //Во втором случае
    if (proizv1 > 0 & proizv2 > 0) //Проверка, являются ли оба произведения положительными
    {
        if (proizv1 < proizv2) //Поиск максимального числа
        {
            Console.WriteLine($"R =" + proizv2); //Если второе больше, то оно и выводится в консоли
        }
        else
        {
            Console.WriteLine($"R =" + proizv1); //Так же с первым
        }
    }
    else
    {
        Console.WriteLine("Подходящих значений нет"); //Если же подходящих значений нет, то выводится соответствующие значение
    }
}

    }
    }
